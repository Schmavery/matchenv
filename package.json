{
  "name": "matchenv",
  "version": "0.1.0",
  "description": "Ppx to help target multiple architecture",
  "scripts": {
    "test": "eval $(dependencyEnv) && GL_BACKEND=native ocamlfind ocamlopt -dsource -pp refmt -ppx _build/native/src/app.native -impl test.re",
    "postinstall": "eval $(dependencyEnv) && nopam && rebel",
    "build": "npm run postinstall",
    "top": "eval $(dependencyEnv) && rtop",
    "env": "eval $(dependencyEnv) && env",
    "editor": "eval $(dependencyEnv) && $EDITOR .",
    "whereisocamlmerlin": "eval $(dependencyEnv) && which ocamlmerlin-reason",
    "mlre": "pbpaste | ./node_modules/reason/refmt_impl.native -parse ml -print re -use-stdin true -is-interface-pp false",
    "reml": "pbpaste | ./node_modules/reason/refmt_impl.native -parse re -print ml -use-stdin true -is-interface-pp false"
  },
  "dependencies": {
    "@opam-alpha/merlin": "^ 2.5.0",
    "dependency-env": "https://github.com/npm-ml/dependency-env.git",
    "nopam": "https://github.com/yunxing/nopam.git",
    "reason": "https://github.com/facebook/reason.git",
    "rebel-bin": "https://github.com/bsansouci/rebel-bin.git"
  },
  "rebel": {
    "targets": [
      {
        "target": "native",
        "engine": "native",
        "entry": "src/index.re",
        "unstable_flags": {
          "compile": "-package compiler-libs.common",
          "link": "-linkpkg -package compiler-libs.common"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsansouci/matchenv.git"
  },
  "author": "bsansouci"
}
